{
  "manifest_version": 2,
  "name": "AutoCloseTabExtension",
  "description": "Auto-Close Tab Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "webNavigation",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{bb9e85dc-02a9-44d9-ad3d-e111448c682c}"
    }
  }
}
